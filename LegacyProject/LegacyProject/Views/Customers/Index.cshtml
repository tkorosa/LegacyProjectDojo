@model IEnumerable<Persistence.Entities.Customer>

@{
    ViewBag.Title = "Kunden";
}

<h2>Kunden</h2>

<p>
    @Html.ActionLink("Neu erstellen", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.CustomerFirstname)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CustomerSurname)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr style="color: @(item.CustomerType=="red"?"pink":"black")">
        <td>
            @Html.DisplayFor(modelItem => item.CustomerFirstname)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CustomerSurname)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Adresse", "Details", "Address", new { id = item.CustomerAddress?.Id }, null) |
            
            @Html.ActionLink("Lieblingsshop", "Details", "FavouriteShop", new { id = item.Id }, null) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
